<Window x:Class="PL.AddStationToLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="AddStationToLine" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox Name="CBPrevStation" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="51" Margin="84,86,0,0" VerticalAlignment="Top" Width="228" />
        <ComboBox Name="CBNewStation" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="58" Margin="84,195,0,0" VerticalAlignment="Top" Width="228"/>
        <CheckBox Name="CBIsFirst" Content="Is it the first station?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="313,34,0,0" Height="34" Width="140"/>
        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Margin="31,341,0,0" Height="48" Click="Button_Click_Submit"/>
        <Label  Content="Prev Station" HorizontalAlignment="Left" Height="35" Margin="135,46,0,0" VerticalAlignment="Top" Width="130"/>
        <Label Content="New Station" HorizontalAlignment="Left" Height="39" Margin="152,151,0,0" VerticalAlignment="Top" Width="104"/>

    </Grid>
</Window>
