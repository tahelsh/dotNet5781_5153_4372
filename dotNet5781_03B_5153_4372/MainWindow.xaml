<Window x:Class="dotNet5781_03B_5153_4372.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_5153_4372"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="BusTemplate"
                  DataType="local:Bus">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                   Text="License Number: " />
                <TextBlock Grid.Column="1"
                   Text="{Binding Path=LicNum}" />
                <TextBlock Grid.Column="2"
                   Text=" Total km: " />
                <TextBlock Grid.Column="3"
                   Text="{Binding Path=TotalKm}" />
                <Button Grid.Column="4"
                   Content="Start driving" />
                <Button Grid.Column="5"
                   Content="Refuel" Click="Refuel" />
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ListBox x:Name="lbBuses" ItemsSource="{Binding}" ItemTemplate="{StaticResource BusTemplate}" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Height="182" Margin="49,88,0,0" VerticalAlignment="Top" Width="666"/>
        <Button x:Name="bAddBus" Content="Add new bus" HorizontalAlignment="Left" Height="73" Margin="253,297,0,0" VerticalAlignment="Top" Width="158" Click="bAddBus_Click"/>

    </Grid>
</Window>
