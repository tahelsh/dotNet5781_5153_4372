<Window x:Class="PL.Buses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Buses" Height="450" Width="800">
    <Grid>
        <ListBox Name="LBBuses" HorizontalAlignment="Left" ItemsSource="{Binding}" Height="275" Margin="34,57,0,0" VerticalAlignment="Top" Width="709" MouseDoubleClick="Bus_MouseDoubleClick"/>
        <Button Content="Add New Bus" HorizontalAlignment="Left" Height="44" Margin="237,354,0,0" VerticalAlignment="Top" Width="192" Click="Button_Click" />

    </Grid>
</Window>
