<Window x:Class="PL.Lines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Lines" Height="450" Width="800">
    <Grid>
        <ListBox Name="LBLines" ItemsSource="{Binding}"  HorizontalAlignment="Left" Height="243" VerticalAlignment="Top" Width="464" Margin="28,28,0,0" MouseDoubleClick="Line_MouseClick"/>
        <Button Content="Add new line" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Margin="177,329,0,0" Height="41" Click="Button_Click_AddNewLine"/>


    </Grid>
</Window>
