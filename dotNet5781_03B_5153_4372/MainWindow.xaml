<Window x:Name="___MainWindow_" x:Class="dotNet5781_03B_5153_4372.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_5153_4372"
        mc:Ignorable="d"
        Title="MainWindow" Height="464.4" Width="795.2" Foreground="#FFFFFFFF" Background="#FFFFFFFF">
    <Window.Resources>
        <DataTemplate x:Key="BusTemplate"
                  DataType="local:Bus" x:Name="bus">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                   Text="License Number: " />
                <TextBlock Grid.Column="1"
                   Text="{Binding Path=LicNum}" />
                <TextBlock Grid.Column="2"
                   Text=" Total km: " />
                <TextBlock Grid.Column="3"
                   Text="{Binding Path=TotalKm}" Name="TBTotalKm" />
                <Button Grid.Column="4"
                   Content="Start driving" Click="Start_Driving_Button_Click" Name="StartDrivingButton" Background="White" />
                <Button Grid.Column="5"
                   Content="Refuel" Click="Refuel" Name="ButtonRefuel" Background="White"/>
                <ProgressBar Grid.Column="6"
                    Name="pbTread"  Visibility="Hidden"/>
                <Label Grid.Column="7"
                   Name="seconds" Visibility="Hidden" />
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="0,2,3.6,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="464*"/>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="98*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbBuses" ItemsSource="{Binding}" ItemTemplate="{StaticResource BusTemplate}" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Height="333" Margin="0,10,-3.6,0" VerticalAlignment="Top" Width="794" MouseDoubleClick="ListBoxDoubleClick" Background="#FFABD5FD" Grid.ColumnSpan="3"/>
        <Button x:Name="bAddBus" Content="Add new bus" HorizontalAlignment="Left" Height="49" Margin="86.1,355,0,0" VerticalAlignment="Top" Width="170" Click="bAddBus_Click" FontFamily="Segoe UI" FontSize="26 px" Background="White" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="10" Margin="46,351,0,0" VerticalAlignment="Top" Width="10" Background="#FFFF1493"/>
        <Label Content="In Treatment" HorizontalAlignment="Left" Height="28" Margin="63,341,0,0" VerticalAlignment="Top" Width="93" FontSize="14"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="10" Margin="44,375,0,0" VerticalAlignment="Top" Width="10" Background="#FFF1F14E"/>
        <Label Content="Refueling" HorizontalAlignment="Left" Height="30" Margin="65,367,0,0" VerticalAlignment="Top" Width="91" FontSize="14"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="10" Margin="44,402,0,0" VerticalAlignment="Top" Width="10" Background="#FF00FFFF"/>
        <Label Content="In driving" HorizontalAlignment="Left" Margin="66,392,0,-4" VerticalAlignment="Top" FontSize="14" Height="30"/>

    </Grid>
</Window>
